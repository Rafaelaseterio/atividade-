#include <stdio.h> {
int main() {
  int numero;

  // Lê um número inteiro do usuário
  printf("Digite um número inteiro: ");
  scanf("%d", &numero);

  // Exibe a tabuada do número
  printf("Tabuada de %d:\n", numero);
  for (int i = 1; i <= 10; i++) {
      printf("%d x %d = %d\n", numero, i, numero * i);
  }

  return 0;
}
